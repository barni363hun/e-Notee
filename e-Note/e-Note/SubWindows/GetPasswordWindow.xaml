<Window x:Class="e_Note.SubWindows.GetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:e_Note.SubWindows"
        mc:Ignorable="d"
        Title="GetPasswordWindow" Width="400" Height="200">
    <Grid>
        <Grid.Background>
            <!--orange-lights.jpg-->
            <ImageBrush ImageSource="pack://application:,,,/Assets/orange-lights.jpg"/>
        </Grid.Background>
        <TextBlock Text="Írd be a mester kulcsot:" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="28" />
        <PasswordBox x:Name="ResponseTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" FontSize="20" BorderBrush="Black" />
        <Button Content="Kódolt fájl létrehozása" Click="OKButton_Click" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="200" Margin="0,0,0,10" FontSize="16" BorderBrush="Black" BorderThickness="2" Padding="5" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
